@page
@model BookShop_Razor.Pages.Categories.EditModel
<form method="post" asp-action="Edit">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="categories.Name"></label>
            <input asp-for="categories.Name" class="form-control" />
            <span asp-validation-for="categories.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="categories.DisplayOrder">Display Order</label>
            <input asp-for="categories.DisplayOrder" class="form-control" />
            <span asp-validation-for="categories.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-page="/categories/index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>