@page
@model BookShop_Razor.Pages.Categories.CreateModel 
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class ="mb-3">
            <label asp-for="categories.Name">Category Name</label>
            <input asp-for="categories.Name" class="form-control"/>
            <span asp-validation-for="categories.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="categories.DisplayOrder">Display Order</label>
            <input asp-for="categories.DisplayOrder" class="form-control" />
            <span asp-validation-for="categories.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="/categories/index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
