@page
@model BookShop_Razor.Pages.Categories.IndexModel
<div class="text-center">
<h1 class="text-center">Category List</h1>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6 text-lg-start">
                <a asp-page="/Categories/Create" class="btn-primary btn-primary">
                    <i class="bi bi-person-plus"></i> &nbsp;
                    Create A New Category
                </a>
            </div>
        </div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
                @foreach (var obj in Model.categories.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                                <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
